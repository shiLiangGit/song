.container{ background: #c90022;}
.user_head{ width: 180rpx; height: 180rpx; border-radius: 5px; overflow: hidden; margin: 0 auto;}
.user_head image{ width: 100%; height: 100%;}
.red_top{ background: #c90022; position: relative; height: 450rpx;}
.show_songname{ width: 447rpx; height: 56rpx; text-align: center; line-height: 56rpx; background: #fff; border-radius: 3px; margin: 30rpx auto 50rpx auto;}
.show_songname{ font-size: 30rpx;}
.red_img{ width: 100%; position: absolute; left: 0; bottom: 0; font-size: 0;}
.red_img image{ width: 100%; height: 100rpx;}
.qrcode{ width: 440rpx; height: 307rpx; position: absolute; z-index: 3; left: 50%; margin-left: -220rpx; bottom: -150rpx;}
.qrcode .qrcode_img{ width: 100%; height: 100%; position: relative; z-index: 3;}
.red_bottom{ width: 90%; height: 346rpx; background: #fff; border-radius: 5px; box-shadow: 2px 2px 10px #cd533c; margin: 240rpx auto 0; padding-top: 40rpx;}
.red_bottom button{ width: 90%; height: 85rpx; line-height: 85rpx; font-size: 34rpx; color: #000; background: #f8f8f8; border: 1px solid #d1d1d1;margin-bottom:25rpx;}
.red_bottom button.forward_btn{ background: #1aad19; color: #fff;}
.red_bottom button image{ width: 130rpx; height: 45rpx;}

